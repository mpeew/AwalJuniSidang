<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_margin="20dp"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:textSize="17dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="SISTEM BERPRODUKSI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_weight="91"
        android:layout_height="0dp" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp">



            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Nama Produk"
                    android:textSize="18dp"
                    android:layout_weight="65"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:entries="@array/coba_spinner"
                    android:layout_weight="35"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/kompal3c_nama_produk"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Sistem Produksi"
                    android:textSize="18dp"
                    android:layout_weight="65"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:entries="@array/coba_spinner"
                    android:layout_weight="35"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/kompal3c_sistem_produksi"/>

            </LinearLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/kompal3c_jumlah_prod_2011_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/kompal3c_jumlah_prod_2011"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="Jumlah Produksi 2011" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/kompal3c_jumlah_prod_2012_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/kompal3c_jumlah_prod_2012"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="Jumlah Produksi 2012" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/kompal3c_jumlah_prod_2013_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/kompal3c_jumlah_prod_2013"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="Jumlah Produksi 2013" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/kompal3c_jumlah_prod_2014_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/kompal3c_jumlah_prod_2014"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="Jumlah Produksi 2014" />
            </android.support.design.widget.TextInputLayout>



        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button android:id="@+id/kompal3c_btn_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SAVE"
                android:background="@android:color/holo_green_light"
                android:layout_marginTop="0dp"
                android:textColor="@android:color/white"/>


    </LinearLayout>


</LinearLayout>