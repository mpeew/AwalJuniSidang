<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_margin="20dp"
        android:padding="10dp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimaryDark"
        android:textSize="17dp"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:text="JENIS DAN KAPASITAS PRODUKSI"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_weight="91"
        android:layout_height="0dp" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="5dp">


            <android.support.design.widget.TextInputLayout
                android:id="@+id/kompal3a_jenis_produksi_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/kompal3a_jenis_produksi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    android:hint="Jenis Produksi" />
            </android.support.design.widget.TextInputLayout>



            <android.support.design.widget.TextInputLayout
                android:id="@+id/kompal3a_kapasitas_produksi_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/kompal3a_kapasitas_produksi"
                    android:layout_width="match_parent"
                    android:inputType="number"
                    android:layout_height="wrap_content"
                    android:hint="Kapasitas Produksi" />
            </android.support.design.widget.TextInputLayout>

            <LinearLayout
                android:layout_marginTop="6dp"
                android:layout_margin="4dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="Satuan"
                    android:textSize="18dp"
                    android:layout_weight="65"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"/>
                <Spinner
                    android:entries="@array/coba_spinner"
                    android:layout_weight="35"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/kompal3a_satuan_spinner"/>

            </LinearLayout>






        </LinearLayout>
    </ScrollView>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="9"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <Button android:id="@+id/kompal3a_btn_save"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="SAVE"
                android:background="@android:color/holo_green_light"
                android:layout_marginTop="0dp"
                android:textColor="@android:color/white"/>


    </LinearLayout>


</LinearLayout>